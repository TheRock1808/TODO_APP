<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap"
      rel="stylesheet"
    />
    <script src="https://kit.fontawesome.com/a81368914c.js"></script>
    <script src="https://unpkg.com/htmx.org@2.0.0/dist/htmx.js"></script>
    <link rel="stylesheet" href="/home.css" />
    <title>SignUp</title>
    <style>
      .error {
        padding: 10px; /* Add padding around the text */
        margin-bottom: 10px; /* Add space between error messages */
        color: #721c24; /* Text color (dark red) */
        background-color: #f8d7da; /* Background color (light red) */
        border: 1px solid #f5c6cb; /* Border color (lighter red) */
        border-radius: 4px; /* Rounded corners */
      }
      
    </style>
  </head>
  <body>
    <div class="container">
     <a hx-get="/" hx-target="body" hx-swap="innerHTML"><i class="fas fa-arrow-left"></i></a>
      <h1>Sign Up</h1>
      <div class="error">{{message}}</div>
      <form
        id="signupForm"
        action="/signupform"
        method="post"
      >
        <div class="login-content">
          <div class="input-div one">
            <div class="i">
              <i class="fas fa-user"></i>
            </div>
            <input
              type="text"
              class="input"
              name="name"
              placeholder="Name"
              required
            />
          </div>
          <div class="input-div one">
            <div class="i">
              <i class="fas fa-envelope"></i>
            </div>
            <input
              type="email"
              class="input"
              name="email"
              placeholder="Email"
              required
            />
          </div>
          <div class="input-div pass">
            <div class="i">
              <i class="fas fa-lock"></i>
            </div>
            <div class="div">
              <input
                type="password"
                class="input"
                name="password"
                minlength="8"
                placeholder="Password"
                required
              />
            </div>
          </div>
          <a class="acc" hx-get="/login" hx-target="body" hx-swap="innerHTML">Already have a account?</a>

          <input type="submit" class="btn" value="Sign Up" />
        </div>
      </form>
    </div>
  </body>
</html>